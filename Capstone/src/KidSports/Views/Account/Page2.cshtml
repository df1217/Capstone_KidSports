@{
    ViewBag.Title = "Page 2";
}

<div class="container-fluid">
    <h1 class="text-center">Step 2:</h1>
    <h3 class="text-center">What are you interested in...</h3><br />

    <form>
        <div class="container-fluid">
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                <h4>Coaching position sought:</h4>
            </div>
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                <h5><input type="radio" value="" style="font-weight: bold;">Head Coach</h5>
            </div>
            <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                <h5><input type="radio" value="" style="font-weight: bold;">Assistant Coach</h5><br />
            </div>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="Sport" class="control-label">Sport</label>
            <select class="form-control">
                <option value=""></option>
                <option value="Basketball">Basketball</option>
                <option value="Baseball">Baseball</option>
                <option value="Football">Football</option>
                <option value="Lacrosse">Lacrosse</option>
                <option value="Soccer">Soccer</option>
                <option value="Volleyball">Volleyball</option>
            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="HSArea" class="control-label">High School Area</label>
            <select class="form-control">
                <option value=""></option>
                <option value="4J">4J</option>
                <option value="Bethel">Bethel</option>
                <option value="Eugene">Eugene</option>
                <option value="Springfield">Springfield</option>
            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="School" class="control-label">School</label>
            <select class="form-control">
                <option value=""></option>
                <option value="Churchill">Churchill</option>
                <option value="North Eugene">North Eugene</option>
                <option value="South Eugene">South Eugene</option>
                <option value="Sheldon">Sheldon</option>
                <option value="Springfield">Springfield</option>
                <option value="Willamette">Willamette</option>
            </select>
        </div>
        <div></div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="Gender" class="control-label">Gender</label>

            <select class="form-control">
                <option value=""></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>

            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="Grade" class="control-label">Grade</label>

            <select class="form-control">
                <option value=""></option>
                <option value="5">5th Grade</option>
                <option value="6">6th Grade</option>
                <option value="7">7th Grade</option>
            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="ChildTeam" class="control-label">If coaching child's team, please note his/her name:</label>
            <input asp-for="ChildTeam" value='' class="form-control" id="ChildTeam" placeholder="">
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-8">
            <h4>Do you have previous experience?</h4>
        </div>
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="YearsCoached" class="control-label">Previous Years Coached:</label>
            <input asp-for="YearsCoached" value='' class="form-control" id="YearsCoached" placeholder="">
        </div>
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="gradesCoached" class="control-label">Previous Grades Coached</label>
            <select class="form-control">
                <option value=""></option>
                <option value="5">5th Grade</option>
                <option value="6">6th Grade</option>
                <option value="7">7th Grade</option>
            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
            <label asp-for="Experience" class="control-label">Years Experience</label>
            <select class="form-control">
                <option value=""></option>
                <option value="1">1 year</option>
                <option value="2">2 years</option>
                <option value="3">3 years</option>
                <option value="4">4 years</option>
            </select>
        </div>

        <div class="form-group col-xs-offset-1 col-xs-10 col-md-8">
            <div class="pull-left">
                <button type="button" class="btn btn-primary btn-md-10">Save</button>
            </div>
        </div>
    </form>

    <div class="pull-right">
        <div class="form-group col-sm-12 col-md-12">
            <ul class="pagination">
                <li><a href="~/Views/Account/Page1.cshtml">1</a></li>
                <li><a href="~/Views/Account/Page2.cshtml">2</a></li>
                <li><a href="~/Views/Account/Page3.cshtml">3</a></li>
                <li><a href="~/Views/Account/Page4.cshtml">4</a></li>
                <li><a href="~/Views/Account/Page5.cshtml">5</a></li>
                <li><a href="~/Views/Account/Page6.cshtml">6</a></li>
                <li><a href="~/Views/Account/Page7.cshtml">7</a></li>
            </ul>
        </div>
    </div>
</div>


