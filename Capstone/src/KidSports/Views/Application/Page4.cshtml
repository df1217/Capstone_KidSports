@model Page4ViewModel
@{
    ViewBag.Title = "Page 4";
}

<div class="container-fluid">
    <h1 class="text-center">Step 4:</h1>
    <h3 class="text-center">NFHS Concussion Course...</h3><br />

    <form asp-controller="Application" asp-action="Page4" method="post" enctype="multipart/form-data">
        <div class="container-fluid">
            <p>
                Check the box to mark completion of the NFHS Concussion Course.<Strong> A member of KidSport's staff will verify this.</Strong>
            </p>
            <a href="https://nfhslearn.com/courses/61064/concussion-in-sports">Take the NFHS Concussion Course...</a>

            <div class="checkbox">
                <label><input type="checkbox" value=" "><strong>I have completed the NFHS Concussion Course.</strong></label>
            </div>

            <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                <label asp-for="Application.NfhsSubmissionDate" class="control-label">Date:</label>
                <select class="form-control">
                    <option value=""></option>
                    <option value="">4/15/2017</option>
                    <option value="">4/16/2017</option>
                    <option value="">4/17/2017</option>
                </select>
            </div>

            <div class="form-group col-xs-offset-1 col-xs-10 col-md-12">
                <p><strong>You can upload an image of your certificate of completion to verify:</strong></p>
            </div>

            <div class="container-fluid" style="margin-top:30px">
                

                <div class="pull-left">
                    <input type="file" asp-for="File" 
                           class="required borrowerImageFile" data-errormsg="PhotoUploadErrorMsg">
                
                    <img id="previewHolder" alt="" />
                </div>
            </div>

            <div class="pull-left" style="margin-top:15px">
                <div class="form-group col-xs-offset-1 col-xs-10 col-md-3">
                    <button type="submit" class="btn btn-primary btn-md-10">Save</button>
                </div>
            </div>

            <div class="pull-right">
                <div class="form-group col-xs-offset-0 col-xs-10 col-md-12">
                    <ul class="pagination">
                        <li><a asp-controller="Application" asp-action="Page1" style="color:black; font-weight:bold;">1</a></li>
                        <li><a asp-controller="Application" asp-action="Page2" style="color:black; font-weight:bold;">2</a></li>
                        <li><a asp-controller="Application" asp-action="Page3" style="color:black; font-weight:bold;">3</a></li>
                        <li><a asp-controller="Application" asp-action="Page4" style="background-color:#218c48; color:black; font-weight:bold;">4</a></li>
                        <li><a asp-controller="Application" asp-action="Page5" style="color:black; font-weight:bold;">5</a></li>
                        <li><a asp-controller="Application" asp-action="Page6" style="color:black; font-weight:bold;">6</a></li>
                        <li><a asp-controller="Application" asp-action="Page7" style="color:black; font-weight:bold;">7</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </form>
</div>


