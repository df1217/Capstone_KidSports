@model ApplicantDetailsViewModel
@{
    ViewBag.Title = "Applicant Details";
}


<div>
    <div class="row">
        @if (Model.applicant.FirstName != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Name:</strong>@Model.applicant.FirstName</div>
        }
    </div>

    <div class="row">
        @if (Model.applicant.Email != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Email:</strong><email mail-to="@Model.applicant.Email">@Model.applicant.Email</email></div>
        }
    </div>
    
    <div class="row">
        @if (Model.applicant.PhoneNumber != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Phone:</strong>@Model.applicant.PhoneNumber</div>
        }
    </div>

    <div class="row">
        @if (Model.displayApp.Address != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Address:</strong>@Model.displayApp.Address</div>
        }
    </div>

    <div class="row">
        @if (Model.displayApp.AppSport != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Sport:</strong>@Model.displayApp.AppSport</div>
        }
    </div>

    <div class="row">
        @if (Model.displayApp.AppGender != null)
        {
            <div class="col-xs-12 col-sm-12 col-md-12"><strong>Gender:</strong>@Model.displayApp.AppGender</div>
        }
    </div>
</div>

<form asp-action="ApplicantDetails" asp-controller="Application" method="post" style="margin-top:10px;">

    <div class="row col-xs-12 col-md-offset-8 col-md-4 pull-right">
        <select class="form-control" asp-for="@Model.appID" id="appID">
        @foreach (var a in Model.allUserApps)
        {
            if (a.ApplicationID == Model.displayApp.ApplicationID)
            {
                <option value="@a.ApplicationID" selected="selected">@a.AppStartDate</option>
            }
            else
            {
                <option value="@a.ApplicationID">@a.AppStartDate</option>
            }
        }
        </select>
    </div>
    <br />

    <div class="well" style="margin-top: 15px;" >
            <input id="ApplicantID" type="hidden" value="@Model.applicant.Id" />

        <div class="row">
            <div class="text-left col-xs-5 col-sm-3 col-md-2">
                <div class="bowl text-left" style="float:left;">
                    <div class="inner">
                        <div class="@Model.getFillCoachInfoClass()">
                            <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="75px" height="75px" viewBox="0 0 75 75" enable-background="new 0 0 150 150" xml:space="preserve">
