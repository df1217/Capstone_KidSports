@{
    ViewBag.Title = "Update Applicaiton Link";
}

<div class="container-fluid">
    <h1 class="text-center">Update Application Link</h1><br />

    <form asp-controller="Admin" asp-action="UpdateAppLink" method="post" enctype="multipart/form-data">
        <div class="well">
            <div style="text-align:right">
                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Address">Address:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Address" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="BevBlog">Bev's Blog:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="BevBlog" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Email">Email:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Email" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="FaceBook">Face Book:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="FaceBook" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Instagram">Instagram:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Instagram" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="NFHS">NFHS:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="NFHS" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="PCA">PCA:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="PCA" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Phone">Phone:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Phone" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Twitter">Twitter:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Twitter" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
                        <label for="Voucher">Voucher:</label>
                    </div>
                    <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-6">
                        <input type="text" class="form-control input-sm" id="Voucher" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-5">
        </div>
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-md-4">
        </div>
        <div class="form-group col-xs-offset-1 col-xs-10 col-md-offset-0 col-sm-3">
            <button type="button" class="btn btn-primary col-xs-12 pull-right">save</button>
        </div>
    </div>
</div>